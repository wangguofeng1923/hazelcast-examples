<configuration scan="true" scanPeriod="60 seconds" debug="true">  

  
<contextListener class="com.hazelcast.logging.LoggerStartupListener" /> 
       <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">   
    <!-- encoder 默认配置为PatternLayoutEncoder -->   
    <encoder>   
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %C %L %caller{1}  %msg%n</pattern>   
    </encoder>   
  </appender>   

  <root level="DEBUG">             
    <appender-ref ref="STDOUT" />   
  </root>     
</configuration>